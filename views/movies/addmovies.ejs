<%- include('./Layouts/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" >
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" ></script>
    <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
   
   

        <div class="offcanvas offcanvas-start" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
        <div class="offcanvas-header">
          
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <h2 align="center">Add movies</h2>

            <form method="post" action="/insertdata" enctype="multipart/form-data">
                <table border="1" align="center">
                    <tr>
                        <td>Movie Name :</td>
                        <td><input type="text" name="moviename"/></td>
                    </tr>
                    <tr>
                        <td>Rating ‚≠ê :</td>
                        <td><input type="text" name="rating"/></td>
                    </tr>
                    <tr>
                        <td>vision:</td>
                        <td>
                            <input type="checkbox" name="vision" value="2d"/>2d
                            <input type="checkbox" name="vision" value="3d"/>3d
                            <input type="checkbox" name="vision" value="4d"/>4d
                            <input type="checkbox" name="vision" value="IMAx 2d"/>IMAx 2d
                            <input type="checkbox" name="vision" value="IMAx 3d"/>3d
                        
                        </td>
                       
                    </tr>
                    <tr>
                        <td>language :</td>
                        <td>
                            <input type="checkbox" name="language" value="hindi"/>Hindi
                            <input type="checkbox" name="language" value="telugu"/>telugu
                            <input type="checkbox" name="language" value="malyalam"/>malyalam
                            <input type="checkbox" name="language" value="Tamil"/>Tamil
                        </td>
                    </tr>
        
                    <tr>
                        <td>Date  :</td>
                        <td><input type="date" name="date"/></td>
                    </tr>
        
                    <tr>
                        <td>time  :</td>
                        <td><input type="time" name="time"/></td>
                    </tr>
        
                    <tr>
                        <td>Image:</td>
                        <td><input type="file" name="image"/></td>
                    </tr>
        
                    <tr>
                        <td></td>
                        <td><input type="submit" name="submit" value="Book tickets"/></td>
                    </tr>
                    
                </table>
            </form>
        </div>
</div>

            <div class="container" >
                <% moviesdata.map((v, i) => { %>
                    <div class="homepage">
                        <a href="singledata/?id=<%= v.id %>" style="list-style: none;">
                           <div class="homeImg">
                            
                                <img src="<%= v.image %>" height="200px"/>
                           
                           </div>
                            <h6><%= v.moviename %></h6>
                            <h6><%= v.rating %></h6>
                            <h6><%= v.language %></h6>
                            <a class='delete-btn' href="/deletemovie/?id=<%= v.id%>">Delete Movie</a>
                        </a>
                        
                    </div>
                <% }) %>

                <div class="pagination-container">
                    <a href="/?page=<%= parseInt(page) - 1 %>&search=<%= search %>"><button <% if(page <= 0) { %>  disabled <%} %>>Prev </button></a>
                    <a  href="/?page=<%= parseInt(page) + 1 %>&search=<%= search %>"><button <% if(page >=moviesblog -1  ) { %>  disabled <%}   %>>Next</button></a>
                </div>
            </div>
</body>
</html>